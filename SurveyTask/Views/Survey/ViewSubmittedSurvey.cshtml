@model SurveyTask.Models.SubmittedSurvey

<h2>@Model.Survey.Title</h2>

<div id="questionsContainer">
    @for (int i = 0; i < Model.Survey.Questions.Count; i++)
    { var question = Model.Survey.Questions.ToArray()[i];
        <ul class="form-group">
            <li>
                @question.Text

                        <div>
                            @{ string answer = Model.Answers.FirstOrDefault(x => x.QuestionId == question.QuestionId)?.AnswerText; }
                            <textarea disabled class="form-control answer-text">@answer</textarea>
                        </div>
                    </li>
        </ul>
    }
</div>