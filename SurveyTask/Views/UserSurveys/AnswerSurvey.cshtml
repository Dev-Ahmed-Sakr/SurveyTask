@model SurveyTask.Models.Survey

@{
    ViewBag.Title = "Answer Survey";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm())
{
    <h3>Questions</h3>
    <div id="questionsContainer">
        @foreach (var question in Model.Questions.ToList())
        {
            <div class="form-group">
                <label class="control-label">Question</label>
                @Html.HiddenFor(model => question.Id)
                @Html.DisplayFor(model => question.Text)
            </div>
            <div>
                @Html.TextAreaFor(model => question.AnswerText, new { @class = "form-control" })
                <span id="answerTextValidation@(question.Id)" class="text-danger"></span>
            </div>
        }
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="btnSubmitAnswers" class="btn btn-primary"><i class="fa fa-save"></i> Create Survey</button>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {

            $('#btnSubmitAnswers').click((event) => {
                debugger;
                var hasError = false;
                $("textarea[id^='answerText']").each(function (index) {
                    var answerText = $(this).val().trim();
                    var questionId = $(this).attr("id").replace("answerText", "");

                    if (answerText == '') {
                        $("#answerTextValidation" + questionId).text("Answer is required.");
                        hasError = true;
                    } else {
                        $("#answerTextValidation" + questionId).text("");
                    }
                });

                if (hasError) { event.preventDefault(); return; }

                let data = { Model };

                $.ajax({
                    url: '/Survey/Create',
                    type: 'post',
                    data,
                    async: false,
                    success: (template) => {
                        // debugger;
                    }
                });
            });
        });


    </script>
}
